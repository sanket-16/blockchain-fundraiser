// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  Waiting
  Approved
  Rejected
  Published
}

model Campaign {
  id          String   @id() @default(uuid())
  contractId  String?
  title       String
  description String
  email       String
  images      String[]
  proof       String[]
  status      Status   @default(Waiting)
  category    String
  location    String
  target      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt()
  owner       String
  end_date    DateTime
}
